extends layout

block content
 h2.page-header Gold Login
 p Please login below
 if errors
  each error, i in errors
   div.alert.alert-danger #{error.msg}
 form(method='post', action='/users/gold-login')
  .form-group
  img(src="/images/cruzid-gold.png", alt="CruzID Gold Logo")
  .form-group
   label Username
   input.form-control(name='username', type='text', placeholder='Enter Username')
  .form-group
   label Password
   input.form-control(name='password', type='password', placeholder='Enter Password')
  input.btn.btn-primary(type='submit', name='submit',value='Login')